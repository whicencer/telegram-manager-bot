{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"],
      "database/*": ["database/*"],
      "bots/*": ["bots/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}